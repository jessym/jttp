{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./lib/",
    "declaration": true,
    "lib": ["ESNext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "target": "es5",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "jest"
    ]
  },
 "include": ["src/**/*"],
 "exclude": ["**/*.spec.ts"]
}
